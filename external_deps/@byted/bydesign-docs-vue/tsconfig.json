{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "docs/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
